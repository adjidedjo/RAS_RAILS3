<div class="container-fluid">
  <div class="row">
    <div class="span3">
      <div class="col-sm-6 col-md-4 col-md-offset-4">
        <div class="block-content">
          <%= form_tag accounting_price_lists_path, :method => 'get', :class => "form-accounting-price-list" do %>
            <div class="block">
              <div class="navbar navbar-inner block-header">
                <div class="muted pull-left">Search Different Price List</div>
                <div class="pull-right"><span class="badge badge-info"></span>

                </div>
              </div>
              <div class="block-content">
                <div class="control-group">
                  <%= label_tag 'cabang' %>
                  <%= select_tag 'branch_price_list', options_for_select(Cabang.get_id.collect {|a| [a.Cabang, a.id]}, params[:branch_price_list]), {:class=>"select", :prompt => 'Select Cabang'} %>
                </div>
                <br />
                <div class="control-group">
                  <%= label_tag 'brand' %>
                  <%= select_tag 'brand_price_list', options_for_select(options_for_tipe_price, params[:brand_price_list]), {:class=>"select", :prompt => 'Select Brand'} %>
                </div>
                <br />
                <div class="control-group">
                  <%= label_tag 'bulan' %>
                  <%= select_tag 'month_price_list', options_for_select(options_for_bulan, params[:month_price_list]), {:class => "select", :prompt => 'Select Bulan'} %>
                </div>
                <br />
                <div class="control-group">
                  <%= label_tag 'tahun' %>
                  <%= select_year(params[:date].nil? ? Date.today : params[:date][:year].to_i, :class => "select") %>
                </div>
                <br />
                <div class="control-group">
                  <button type="submit" class="btn btn-primary">
                    <%= params[:branch].blank? ? 'Search' : 'Refine Search' %>
                  </button>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <% if params[:branch_price_list].blank? && params[:brand_price_list].blank? %>
      <div class="span6">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
          <div class="span8" style="padding-top: 25px">
            <table id="price_list" border="1" class="display responsive no-wrap" cellspacing="0">
              <thead>
                <tr>
                  <th></th>
                  <th>No Faktur</th>
                  <th>Customer</th>
                  <th>Kode Barang</th>
                  <th>Size</th>
                  <th>Qty</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              </tbody>
            </table>
            <div class="span6 offset2">
              <h4><%= params[:branch].blank? ? 'Silahkan pilih Cabang, Brand, dan Bulan' : 'Data tidak ditemukan' %></h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="span6">
      <div class="col-sm-6 col-md-4 col-md-offset-4">
        <div class="span8" style="padding-top: 25px">
          <%= form_tag update_multiple_accounting_price_lists_path, :method => :post do %>
            <table id="price_list" border="1" class="display" cellspacing="0" cellpadding="3" width="100%">
              <thead>
                <tr>
                  <th class="th-ops"><%= check_box_tag "check_all" %> Check All</th>
                  <th class="th-nofak">No Faktur</th>
                  <th class="th-cust">Customer</th>
                  <th class="th-item">Kode Barang</th>
                  <th class="th-pjg">P</th>
                  <th class="th-lbr">L</th>
                  <th class="th-qty">Qty</th>
                  <th class="th-qty">Bonus</th>
                </tr>
              </thead>
              <tbody>
                <% @test.each do |laporan| %>
                  <tr>
                    <%= hidden_field_tag 'branch_price_list', params[:branch_price_list] %>
                    <%= hidden_field_tag 'brand_price_list', params[:brand_price_list] %>
                    <%= hidden_field_tag 'month_price_list', params[:month_price_list] %>
                    <% date_get = params[:date_update].nil? ? params[:date][:year] : params[:date_update] %>
                    <%= hidden_field_tag 'date', date_get %>
                    <td><%= check_box_tag "report_ids[]", laporan.id %> || <%= link_to 'Detail', edit_accounting_price_list_path(laporan.id), data: {remote: true, "data-toggle" => "modal", "data-target" => "myModal",
                        params: { cabang_id: laporan.cabang_id, nofaktur: laporan.nofaktur, branch: params[:branch], brand: params[:brand], month: params[:month] }.to_param} %></td>
                    <td><%= laporan.nofaktur %></td>
                    <td><%= laporan.customer %></td>
                    <td><%= laporan.kodebarang %></td>
                    <td><%= laporan.panjang %></td>
                    <td><%= laporan.lebar %></td>
                    <td><%= laporan.quantity %></td>
                    <td><%= laporan.bonus %></td>
                  </tr>
                <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                  <%= render 'form', :locals => {:tipe => params[:tipe]} %>
                </div>
              <% end %>
              </tbody>
            </table>
            <br />
            <% unless @test.empty? %>
              <%= submit_tag "Set all as checked" %>
              <%= submit_tag "Checked as customer services" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
