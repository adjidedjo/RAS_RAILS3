<div class="container">
  <div class="row">
    <div class="span3">
      <div class="col-sm-6 col-md-4 col-md-offset-4">
        <div class="block-content">
          <%= form_tag accounting_price_lists_path, :method => 'get', :class => "form-accounting-price-list" do %>
            <div class="block">
              <div class="navbar navbar-inner block-header">
                <div class="muted pull-left">Search Different Price List</div>
                <div class="pull-right"><span class="badge badge-info"></span>

                </div>
              </div>             
              <div class="block-content">      
                <div class="control-group">
                  <%= label_tag 'cabang' %>
                  <%= select_tag 'branch', options_for_select(Cabang.get_id.collect {|a| [a.Cabang, a.id]}, params[:branch]), {:class=>"select", :prompt => 'Select Cabang'} %>
                </div>               
                <div class="control-group">
                  <%= label_tag 'brand' %>
                  <%= select_tag 'brand', options_for_select(options_for_tipe, params[:brand]), {:class=>"select", :prompt => 'Select Brand'} %>
                </div>
                <div class="control-group">
                  <%= label_tag 'bulan' %>
                  <%= select_tag 'month', options_for_select(options_for_bulan, params[:month]), {:class => "select", :prompt => 'Select Bulan'} %>
                </div>
                <div class="control-group">
                  <button type="submit" class="btn btn-primary">
                    <%= params[:branch].blank? ? 'Search' : 'Refine Search' %>
                  </button>
                </div>
              </div>
            </div>
          <% end %>        
        </div>
      </div>
    </div>
    <% if params[:branch].blank? && params[:brand].blank? || @accounting_price_lists.nil? %>
      <div class="span6">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
          <div class="span8" style="padding-top: 25px">
            <table id="price_list" border="1" class="display responsive no-wrap" cellspacing="0">
              <thead>
                <tr>
                  <th>Branch</th>
                  <th>Kode Barang</th>
                  <th>Brand</th>
                  <th>Size</th>
                  <th>Qty</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              </tbody>
            </table>
            <div class="span6 offset2">
              <h4><%= params[:branch].blank? ? 'Silahkan pilih Cabang, Brand, dan Bulan' : 'Data tidak ditemukan' %></h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="span6">
      <div class="col-sm-6 col-md-4 col-md-offset-4">
        <div class="span8" style="padding-top: 25px">
          <table id="price_list" border="1" class="display" cellspacing="0" cellpadding="3" width="100%">
            <thead>
              <tr>
                <th>Branch</th>
                <th>Kode Barang</th>
                <th>Brand</th>
                <th>Size</th>
                <th>Qty</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @accounting_price_lists.each do |laporan| %>
                <tr>
                  <td><%= Cabang.find(params[:branch]).Cabang.gsub(/Cabang/,'') %></td>
                  <td><%= laporan.kodebarang %></td>
                  <td><%= params[:brand].to_s %></td>
                  <td><%= (laporan.panjang + ' ' + 'x' + ' ' + laporan.lebar) %></td>
                  <td><%= laporan.quantity %></td>
                  <td><%= link_to 'Detail', edit_accounting_price_list_path(laporan.id), data: {remote: true, "data-toggle" => "modal", "data-target" => "myModal", 
                      params: { cabang_id: laporan.cabang_id, nofaktur: laporan.nofaktur, branch: params[:branch], brand: params[:brand], month: params[:month] }.to_param} %></td>
                </tr>
              <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <%= render 'form', :locals => {:tipe => params[:tipe]} %>
              </div>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>