<meta http-equiv="refresh" content="3600" />
<div class="row-fluid">
  <div class="offset3">
    <div class="span5">
      <table id="table_grand_total" class="display">
        <thead>
          <tr>
            <th style="font-size: 15px;"></th>
            <th style="font-size: 15px;"></th>
          </tr>
        </thead>
        <tfoot>
        </tfoot>
        <tbody>
          <% ["KM","DV","HB"].each do |jenis| %>
            <tr>
              <th scope="row" style="font-size: 18px;"><%= jenis(jenis) %></th>
              <td style="font-size: 20px;"><%= currency(LaporanCabang.sum_amount.search_by_type(jenis).search_by_month_and_year(Date.today.month, Date.today.year).not_equal_with_nosj.first.sum_harganetto2) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="offset4">
    <div class="span5">
      <table id="table_grand_total2" class="display">
        <thead>
          <tr>
            <th style="font-size: 15px;"></th>
            <th style="font-size: 15px;"></th>
          </tr>
        </thead>
        <tfoot>
        </tfoot>
        <tbody>
          <% ["KB","SA","SB"].each do |jenis| %>
            <tr>
              <th scope="row" style="font-size: 18px;"><%= jenis(jenis) %></th>
              <td style="font-size: 20px;"><%= currency(LaporanCabang.sum_amount.search_by_type(jenis).search_by_month_and_year(Date.today.month, Date.today.year).not_equal_with_nosj.first.sum_harganetto2) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="row-fluid">
  <div class="offset4">
    <div id="grand_total">
      <div class="span3">
        <h3 style="font-size: 25px;"><i>Grand Total</i></h3>
      </div>
      <div class="span3">
        <h3 style="font-size: 25px;"><%= currency(@grand_total) %></h3>
      </div>
    </div>
  </div>
</div>
<div class="slider1">
  <% Cabang.get_id.each do |cabang| %>
    <div class="slide">
      <h4><%= Cabang.find(cabang).Cabang.gsub(/cabang/, '')  %></h4>
      <table id="table_total_<%= cabang.id %>" class="table table-striped">
        <thead>
          <tr>
            <th rowspan="2" style="font-size: 15px; text-align: center;">Type</th>
            <th colspan="8" style="font-size: 15px; text-align: center;">Brands</th>
          </tr>
          <tr>
            <% ["Elite", "Lady Americana", "Royal", "Serenity"].each do |brand| %>
              <th style="font-size: 15px;"><%= brand %></th>
            <% end %>
          </tr>
        </thead>
        <tfoot>
        </tfoot>
        <tbody>
          <% ["KM","DV","HB","KB","SA","SB"].each do |jenis| %>
            <tr>
              <th scope="row" style="font-size: 15px; height: 10px;"><%= jenis(jenis) %></th>
              <% ["E", "L", "R", "S"].each do |cab| %>
                <td style="font-size: 15px; height: 40px;"><%= currency(LaporanCabang.where("kodebrg like ?", %(__#{cab}%)).search_by_branch(cabang).sum_amount.search_by_type(jenis).search_by_month_and_year(Date.today.month, Date.today.year).not_equal_with_nosj.first.sum_harganetto2) %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('.slider1').bxSlider({
      displaySlideQty: 1,
      moveSlideQty: 1,
      mode: 'fade',
      auto: true,
      controls: false,
      infiniteLoop: true,
      pager: false,
      speed: 10000,
      pause: 30000
    });
  });
</script>