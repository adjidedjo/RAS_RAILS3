<div class="row-fluid">
  <div class="offset4">
    <div class="span5">
      <!-- block -->
      <div class="block">
        <div class="navbar navbar-inner block-header">
          <div class="muted pull-left">Standard Size Detail</div>
          <div class="pull-right"><span class="badge badge-info"></span>

          </div>
        </div>
        <div class="block-content collapse in">
          <%= form_tag reports_size_standard_path, :method => 'get' do %>
            <fieldset>
              <label class="radio">
                <%= radio_button_tag 'size_standard', '090' %> 090
              </label>
              <label class="radio">
                <%= radio_button_tag 'size_standard', '100' %> 100
              </label>
              <label class="radio">
                <%= radio_button_tag 'size_standard', '120' %> 120
              </label>
              <label class="radio">
                <%= radio_button_tag 'size_standard', '160' %> 160
              </label>
              <label class="radio">
                <%= radio_button_tag 'size_standard', '180' %> 180
              </label>
              <label class="radio">
                <%= radio_button_tag 'size_standard', '200' %> 200
              </label>
            </fieldset>
            <label class="radio">
              <%= radio_button_tag 'size_standard', 'all' %> All
            </label>
            </fieldset>
            <br />
            <div class="pull-right"><button type="submit" class="btn btn-primary">Next</button></div>
          <% end %>
        </div>
      </div>
      <!-- /block -->
    </div>
  </div>
</div>
