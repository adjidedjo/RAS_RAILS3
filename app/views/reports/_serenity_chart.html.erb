<%= content_tag :div, "", id: "serenity_chart", data: {sales: chart_serenity} %>

<script type="text/javascript" charset="utf-8">
  $(function () {
    new Morris.Line({
      element: 'serenity_chart',
      data: $('#serenity_chart').data('sales'), 
      xkey: 'merk',
      ykeys: ['quantity_ser', 'quantity_last_ser'],
      labels: ['Current Month', 'Last Month'],
      parseTime: false,
      resize: true,
      ymin: 0,
      ymax: 2000,
      lineColors: ['#0b62a4', '#F07746'],
      gridTextSize: 10
    });
  });
</script>