<%= content_tag :div, "", id: "royal_chart", data: {sales: chart_royal} %>

<script type="text/javascript" charset="utf-8">
  $(function () {
    new Morris.Line({
      element: 'royal_chart',
      data: $('#royal_chart').data('sales'), 
      xkey: 'merk',
      ykeys: ['quantity_royal', 'quantity_last_royal'],
      labels: ['Current Month', 'Last Month'],
      parseTime: false,
      resize: true,
      ymin: 0,
      ymax: 4000,
      lineColors: ['#0b62a4', '#F07746'],
      gridTextSize: 10
    });
  });
</script>