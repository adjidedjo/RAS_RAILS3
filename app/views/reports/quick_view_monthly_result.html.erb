<div class="row-fluid">
  <div class="offset5">
    <div class="block-content collapse in">
      <h2 style="font-size: 17px;"><i>Quick View Sales Report</i></h2>
    </div>
  </div>
</div>
<div class="row-fluid">
  <div class="offset0">
    <div class="span5">
      <!-- block -->
      <div class="block">
        <div class="navbar navbar-inner block-header">
          <div class="muted pull-left">Search Parameters</div>
          <div class="pull-right"><span class="badge badge-info"></span>

          </div>
        </div>
        <div class="block-content collapse in">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Brand</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= params[:brand].nil? ? "" : params[:brand].join(',') %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <!-- /block -->
    </div>
  </div>
</div>
<br />
<h5><p>NB: Hasil Laporan Penjualan ini tidak termasuk penjualan Modern Market, SJY, SJP, SJV dan SJB</p></h5>
<div class="row-fluid">
  <div class="block-content collapse in">
    <label>
    </label>
  </div>
</div>
<br />
<div class="row-fluid">
  <div class="block-content collapse in">
    <table id="quick_report" border="1" class="display" cellspacing="0" cellpadding="3" width="100%">
      <thead>
        <tr>
          <th rowspan="2">Branch</th>
          <th colspan="2"><%= 3.month.ago.strftime("%B") + " " + 3.month.ago.strftime("%Y") %></th>
          <th colspan="2"><%= 2.month.ago.strftime("%B") + " " + 2.month.ago.strftime("%Y") %></th>
          <th colspan="2"><%= 1.month.ago.strftime("%B") + " " + 1.month.ago.strftime("%Y") %></th>
          <th colspan="2"><%= Date.today.strftime("%B") + " " + Date.today.strftime("%Y") %></th>
        </tr>
        <tr>
          <% (1..4).each do %>
            <th>Qty</th>
            <th>Val</th>
          <% end %>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <th scope="row">Total</th>
          <% (1..8).each do  %>
            <td></td>
          <% end %>
        </tr>
      </tfoot>
      <tbody>
        <% @customerstore.each do |laporan| %>
          <tr>
            <td scope="row"><%= Cabang.find_by_id(laporan.cabang).Cabang.gsub(/Cabang/,'') %></td>


            <% if LaporanCabang.customer_quick_monthly(3.month.ago.month, 3.month.ago.year, laporan.cabang, params[:brand]).empty? %>
              <td>0</td>
              <td>0</td>
            <% else %>
              <% LaporanCabang.customer_quick_monthly(3.month.ago.month, 3.month.ago.year, laporan.cabang, params[:brand]).each do |a| %>
                <td><%= a.sum_jumlah.nil? ? "0" : a.sum_jumlah.to_i %></td>
                <td><%= a.sum_harganetto2.nil? ? "0" : number_with_delimiter(a.sum_harganetto2.to_i, delimiter: ".") %></td>
              <% end %>
            <% end %>


            <% if LaporanCabang.customer_quick_monthly(2.month.ago.month, 2.month.ago.year, laporan.cabang,
                params[:brand]).empty? %>
              <td>0</td>
              <td>0</td>
            <% else %>
              <% LaporanCabang.customer_quick_monthly(2.month.ago.month, 2.month.ago.year, laporan.cabang,
                params[:brand]).each do |a| %>
                <td><%= a.sum_jumlah.nil? ? "0" : a.sum_jumlah.to_i %></td>
                <td><%= a.sum_harganetto2.nil? ? "0" : number_with_delimiter(a.sum_harganetto2.to_i, delimiter: ".") %></td>
              <% end %>
            <% end %>


            <% if LaporanCabang.customer_quick_monthly(1.month.ago.month, 1.month.ago.year, laporan.cabang,
                params[:brand]).empty? %>
              <td>0</td>
              <td>0</td>
            <% else %>
              <% LaporanCabang.customer_quick_monthly(1.month.ago.month, 1.month.ago.year, laporan.cabang,
                params[:brand]).each do |a| %>
                <td><%= a.sum_jumlah.nil? ? "0" : a.sum_jumlah.to_i %></td>
                <td><%= a.sum_harganetto2.nil? ? "0" : number_with_delimiter(a.sum_harganetto2.to_i, delimiter: ".") %></td>
              <% end %>
            <% end %>

            <% if LaporanCabang.customer_quick_monthly(Date.today.month, Date.today.year, laporan.cabang,
                params[:brand]).empty? %>
              <td>0</td>
              <td>0</td>
            <% else %>
              <% LaporanCabang.customer_quick_monthly(Date.today.month, Date.today.year, laporan.cabang,
                params[:brand]).each do |a| %>
                <td><%= a.sum_jumlah.nil? ? "0" : a.sum_jumlah.to_i %></td>
                <td><%= a.sum_harganetto2.nil? ? "0" : number_with_delimiter(a.sum_harganetto2.to_i, delimiter: ".") %></td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

