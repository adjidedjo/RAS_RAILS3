<div class="row-fluid">
  <div class="offset5">
    <div class="block-content collapse in">
      <h2 style="font-size: 17px;"><i>Laporan Sales Cabang per Bulan</i></h2>
    </div>
  </div>
</div>
<h5><p>NB: Hasil Laporan Penjualan ini tidak termasuk penjualan Project dan Aksesoris</p></h5>
<div class="container-fluid">
  <div class="row">
    <div class="span3">
      <div class="col-sm-6 col-md-4 col-md-offset-4">
        <div class="block-content">
          <%= form_tag reports_quick_view_monthly_result_path, :method => 'get', :class => "form-accounting-price-list" do %>
            <div class="block">
              <div class="navbar navbar-inner block-header">
                <div class="muted pull-left">Search Different Price List</div>
                <div class="pull-right"><span class="badge badge-info"></span>

                </div>
              </div>
              <div class="block-content">
                <%= hidden_field_tag "group_by", params[:group_by] %>
                <%= hidden_field_tag "month", params[:month] %>
                <div class="control-group">
                  <%= label_tag 'brand' %>
                  <%= select_tag 'brand_scb', options_for_select(options_for_tipe_price, params[:brand_scb]), :class => 'multiselect', :multiple => true %>
                </div>
                <br />
                <div class="control-group">
                  <button type="submit" class="btn btn-primary">
                    <%= params[:branch].blank? ? 'Search' : 'Refine Search' %>
                  </button>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="span6">
      <div class="col-sm-6 col-md-4 col-md-offset-4">
        <div class="span8" style="padding-top: 25px">
          <table id="quick_report" border="1" class="display" cellspacing="0" cellpadding="3" width="100%">
            <thead>
              <tr>
                <th rowspan="2">Branch</th>
                <th colspan="2"><%= link_to image_tag("left.png", :size => "25x25"), reports_quick_view_monthly_result_path(brand_scb: params[:brand_scb], month: (params[:month].to_date - 1.month), group_by: params[:group_by]),
                    :class => '' %> <%= Date::MONTHNAMES[params[:month].to_date.month] + " " + params[:month].to_date.strftime("%Y") %> <%= link_to image_tag("right.png", :size => "25x25"), reports_quick_view_monthly_result_path(brand_scb: params[:brand_Scb], month: (params[:month].to_date + 1.month), group_by: params[:group_by]), :class => '' %></th>
              </tr>
              <tr>
                <th>Qty</th>
                <th>Val</th>
              </tr>
            </thead>
            <tfoot>
              <tr>
                <th scope="row">Total</th>
                <% (1..2).each do  %>
                  <td></td>
                <% end %>
              </tr>
            </tfoot>
            <tbody>
              <% Cabang.get_id.each do |laporan| %>
                <tr>
                  <td scope="row"><%= laporan.Cabang.gsub(/Cabang/,'') %></td>
                  <% if SalesBrand.customer_quick_monthly(params[:month].to_date.month, params[:month].to_date.year, laporan.id,
                      params[:brand_scb]).empty? %>
                    <td>0</td>
                    <td>0</td>
                  <% else %>
                    <% SalesBrand.customer_quick_monthly(params[:month].to_date.month, params[:month].to_date.year, laporan.id,
                      params[:brand_scb]).each do |a| %>
                      <td><%= a.qty.nil? ? "0" : currency(a.qty.to_i) %></td>
                      <td><%= a.val.nil? ? "0" : number_with_delimiter(a.val.to_i, delimiter: ".") %></td>
                    <% end %>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>