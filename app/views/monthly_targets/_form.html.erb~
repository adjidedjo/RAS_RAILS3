	<%= form_for(@monthly_target, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @monthly_target.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@monthly_target.errors.count, "error") %> prohibited this monthly_target from being saved:</h2>

      <ul>
      <% @monthly_target.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
		<legend>Monthly Target</legend>
			<div class="control-group">
		  	<%= f.label :branch %>
				<div class="controls">
					<%= f.select(:cabang_id, Cabang.get_id.collect {|a| [a.Cabang, a.id]}) %>
				</div>
			</div>

			<div class="control-group">
		  	<%= f.label :brand_id %>
				<div class="controls">
					<%= f.select(:brand_id, Merk.all.collect {|a| [a.Merk, a.id]}) %>
				</div>
			</div>

			<div class="control-group">
		  	<%= f.label :total %>
				<div class="controls">
					<%= f.number_field :total %>
				</div>
			</div>

		  <div class="control-group">
		  	<%= f.label :target_month %>
				<div class="controls">
					<%= f.date_select :target_month, :discard_day => true, :prompt => { :month => 'Select Month', :year => 'Select year' } %>
				</div>
			</div>
			
			<div class="controls">
				<%= submit_tag "Create", :class => "btn btn-primary" %>
		  </div>
	<% end %>
