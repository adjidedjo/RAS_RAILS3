<%= form_for(@monthly_target) do |f| %>
  <% if @monthly_target.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@monthly_target.errors.count, "error") %> prohibited this monthly_target from being saved:</h2>

      <ul>
      <% @monthly_target.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :cabang_id %>
    <%= f.select(:cabang_id, Cabang.get_id.collect {|a| [a.Cabang, a.id]}, { :class => 'input_form_monthly' }) %>
  </div>
  <br />
  <div>
    <%= f.label :target_month %>
    <%= f.date_select :target_month, :discard_day => true, :prompt => { :month => 'Select Month', :year => 'Select year' }, :class => 'input_form_monthly' %>
  </div>
  <br />
  <div>
    <%= f.label :brand_id %>
    <%= f.select(:brand_id, Merk.all.collect {|a| [a.Merk, a.id]}, { :class => 'input_form_monthly' }) %>
  </div>
  <br />
  <div>
    <%= f.label :total %>
    <%= f.number_field :total, :class => 'input_form' %>
  </div>
  <br />
  <div>
    <%= submit_tag "Create", :class => "button_monthly" %>
  </div>
<% end %>
