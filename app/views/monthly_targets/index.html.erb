<div class="row-fluid">
  <div class="block-content collapse in">
    <div class="offset5">
      <h2>Monthly Targets</h2>
    </div>
  </div>
</div>
<div class="row-fluid">
  <div class="block-content collapse in">
    <table id="monthly_target1" border="1" class="display" cellspacing="0">
      <thead>
        <tr>
          <th>Cabang</th>
          <th>Brand</th>
          <th>Sales</th>
          <th>Year</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @monthly_targets.each do |monthly_target| %>
          <tr>
            <td>
              <%= link_to Cabang.find_by_id(monthly_target.cabang_id).Cabang.gsub(/Cabang/,''), monthly_target_path(monthly_target) %>
            </td>
            <td><%= monthly_target.merk_id %></td>
            <td><%= monthly_target.sales %></td>
            <td><%= monthly_target.target_year %></td>
            <td><%= link_to 'Edit', edit_monthly_target_path(monthly_target), {:class => "btn btn-info"} %></td>
            <td><%= link_to 'Delete', monthly_target, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br />

<%= link_to 'New Monthly target', new_monthly_target_path, {:class => "btn btn-primary"} %>
