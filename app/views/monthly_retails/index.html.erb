<div class="row-fluid">
  <div class="block-content collapse in">
    <div class="offset4">
      <h2>Monthly Retail Customers</h2>
    </div>
  </div>
</div>
<div class="row-fluid">
  <div class="block-content collapse in"><table>
      <table id="monthly_retail"  border="1" class="display" cellspacing="0" cellpadding="3">
        <thead>
          <tr>
            <th>Store Name</th>
            <th>Cabang</th>
            <th>Brand</th>
            <th>From period</th>
            <th>To period</th>
            <th>Total</th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <% @monthly_retails.each do |monthly_retail| %>
          <tbody>
            <tr>
              <td><%= link_to monthly_retail.customer, monthly_retail_path(monthly_retail) %></td>
              <td><%= Cabang.find_by_id(monthly_retail.cabang_id).Cabang.gsub(/Cabang/,'') %></td>
              <td><%= Merk.find_by_id(monthly_retail.brand_id).Merk %></td>
              <td><%= monthly_retail.from_period.strftime('%d %B %Y') %></td>
              <td><%= monthly_retail.to_period.strftime('%d %B %Y') %></td>
              <td><%= currency(monthly_retail.total) %></td>
              <td><%= link_to 'Edit', edit_monthly_retail_path(monthly_retail), {:class => "btn btn-info"} %></td>
              <td><%= link_to 'Delete', monthly_retail, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger" %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
  </div>
</div>

<br />

<%= link_to 'New Monthly retail', new_monthly_retail_path, {:class => "btn btn-primary"} %>
