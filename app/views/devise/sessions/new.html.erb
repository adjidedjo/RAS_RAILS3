<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "login") do |f| %>
  <div><%= f.label :login %><br />
    <%= f.text_field :login, :autofocus => true, :class => "input_login" %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, :class => "input_login" %></div>

  <div><%= f.submit "Sign in", :class => "button" %></div>
  <div class="clear"></div>
  <%= render "devise/shared/links" %>
<% end %>
