<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class => "form_signup") do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
    <%= f.email_field :email, :autofocus => true, :class => "input_login" %></div>

  <div><%= f.label :username %><br />
    <%= f.text_field :username, :class => "input_login" %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, :class => "input_login" %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, :class => "input_login" %></div>

  <div><%= f.submit "Sign up", :class => "button" %></div>
  <div class="clear"></div>

  <%= render "devise/shared/links" %>
<% end %>
