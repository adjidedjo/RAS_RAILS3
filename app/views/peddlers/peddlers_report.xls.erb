<% unless params[:branch].nil? %>
  <div class="row-fluid">
    <div class="offset5">
      <div class="block-content collapse in">
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <table id="weekly_report_sales" class="pretty">
      <thead>
        <tr>
          <th rowspan="3">Description</th>
        </tr>
        <tr>
          <th colspan="5">Week <%= 4.week.ago.beginning_of_week.to_date.cweek %> </br><%= 1.week.ago.beginning_of_week.strftime('%d/%m/%Y') %> -
            <%= 1.week.ago.end_of_week.strftime('%d/%m/%Y') %></th>
          <th colspan="5">Week <%= 3.week.ago.beginning_of_week.to_date.cweek %> </br><%= 1.week.ago.beginning_of_week.strftime('%d/%m/%Y') %> -
            <%= 1.week.ago.end_of_week.strftime('%d/%m/%Y') %></th>
          <th colspan="5">Week <%= 2.week.ago.beginning_of_week.to_date.cweek %> </br><%= 1.week.ago.beginning_of_week.strftime('%d/%m/%Y') %> -
            <%= 1.week.ago.end_of_week.strftime('%d/%m/%Y') %></th>
          <th colspan="5">Week <%= 1.week.ago.beginning_of_week.to_date.cweek %> </br><%= 1.week.ago.beginning_of_week.strftime('%d/%m/%Y') %> -
            <%= 1.week.ago.end_of_week.strftime('%d/%m/%Y') %></th>
          <th colspan="5">Week <%= Date.today.beginning_of_week.cweek %> </br><%= Date.today.beginning_of_week.strftime('%d/%m/%Y') %> -
            <%= Date.today.end_of_week.strftime('%d/%m/%Y') %></th>
        </tr>
        <tr>
          <% (1..5).each do  %>
            <th>Free</th>
            <th>Forecast</th>
            <th>Out SO</th>
            <th>Real</th>
            <th>Buff</th>
          <% end %>
        </tr>
      </thead>
      <tfoot>
      </tfoot>
      <tbody>
        <% [4,3,2,1,0].each do |c| %>
          <% Stock.check_stock_asongan(c.week.ago.beginning_of_week.to_date, c.week.ago.end_of_week.to_date, params[:branch]).each do ia %>
            <tr>
              <td><%= c.kodebrg %></td>
              <td><%= c.namabrg %></td>
              <td><%= c.freestock %></td>
              <td></td>
              <td><%= c.outstandingSO%></td>
              <td><%= c.realstock %></td>
              <td><%= c.bufferstock %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

