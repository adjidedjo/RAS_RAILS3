<div class="offset4">
	<h2>Auto Notification Report</h2>
</div>

<table id="user" class="display">
	<thead>
		<tr>
		  <th>User</th>
		  <th>Schedule</th>
		  <th>Brand</th>
		  <th>Type</th>
		  <th></th>
		  <th></th>
		</tr>
	</thead>

<% @users_mails.each do |users_mail| %>
	<tbody>
		<tr>
		  <td><%= User.find(users_mail.user_id).username %></td>
		  <td><%= users_mail.schedule %></td>
		  <td><%= Merk.find_by_IdMerk(users_mail.brand).Merk %></td>
		  <td><%= users_mail.category %></td>
		  <td><%= link_to 'Edit', edit_users_mail_path(users_mail), {:class => "btn btn-info"}%></td>
		  <td><%= link_to 'Destroy', users_mail, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger" %></td>
		</tr>
	</tbody>
<% end %>
</table>

<br />

