<div class="offset1" padding-top="30px">
	<div id="orders_chart" style="width: 900px; height: 500px;"></div>
</div>
<script type="text/javascript" charset="utf-8">
  $(function () {
    new Highcharts.Chart({
		  chart: { renderTo: 'orders_chart' },
		  title: { text: 'Monthly Sales' },
		  xAxis: { categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun',
                    'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'] },
		  yAxis: {
		    title: { text: 'Total' }
		  },
		  tooltip: {},
		  series: [
			<% Merk.all.each do |merk| %>
			{
				name: "<%= merk.Merk %>",
		    data: <%= (Date.today.beginning_of_year.to_date..Date.today.to_date).map(&:beginning_of_month).uniq.map { |date| 
					LaporanCabang.total_on(date.month, merk.IdMerk, Date.today.year).to_f}.inspect %>
		  },
			<% end %>]
		});
  });
</script>
