<%= form_tag laporan_cabang_search_path, :method => 'get' do %>
	<div class='offset1'>
		<div class="form-div">
			<fieldset>
				<legend>Sales Report</legend>
					<%= label_tag 'From' %>
					<%= text_field_tag 'from', nil, :placeholder => "From Date"  %>
					<%= label_tag 'To' %>
					<%= text_field_tag 'to', nil, :placeholder => "To Date" %>
					<label>Brand</label>
					<%= select_tag 'merk_id', options_for_select(Merk.merk_all.collect {|a| [a.Merk, a.IdMerk]}, 
						params[:merk_id]), :prompt => 'Select Brand' %>
					<label>By</label>
						<label class="radio">
							<%= radio_button_tag 'reports', 'customer' %> Customer
						</label>
						<label class="radio">
							<%= radio_button_tag 'reports', 'type' %> Type
						</label>
						<label class="radio">
							<%= radio_button_tag 'reports', 'size' %> Size
						</label>
					<br />
					<button type="submit" class="btn btn-primary">Search</button>
				</fieldset>
		</div>
	</div>
<% end %>
